<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/uselistbehindlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_custom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/uselistnametxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="#1259a9"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uselistpricetxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:textColor="#1259a9"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uselistunittxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#1259a9"
                android:textSize="16dp" />


        </LinearLayout>

        <Button
            android:id="@+id/uselisteditbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit" />


    </RelativeLayout>

</layout>