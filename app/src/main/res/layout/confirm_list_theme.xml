<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/confirmlistbehindlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_custom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/confirmlistnameandpricetxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:textColor="#1259a9"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmlistamounttxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:textColor="#2CCF0F"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirmlisttotalcosttxt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="16dp" />


        </LinearLayout>

        <Button
            android:id="@+id/confirmlistremovebtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/remove" />


    </RelativeLayout>

</layout>