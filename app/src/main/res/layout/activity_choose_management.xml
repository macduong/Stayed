<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/choose_manage_background"
        android:backgroundTint="#B0020C29"
        android:backgroundTintMode="src_over"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".Activities.ChooseManagement">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Continue\nyour management?"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/appearifnewstart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="This will reset all of your old data\nAre you sure?"
                android:textColor="@color/white"
                android:textSize="30dp" />


            <CheckBox
                android:id="@+id/keepservices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:buttonTint="@color/white"
                android:fontFamily="cursive"
                android:text="Keep Services data"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/choosecontinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:background="@drawable/button2"
                android:text="Continue"
                android:textColor="@color/white"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/choosenew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button3"
                android:text="New start"
                android:textColor="@color/white" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/button2"
            android:text="Logout"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>
